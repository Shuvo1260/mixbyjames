<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mixbyjames" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jade</item>
        <item name="colorPrimaryVariant">@color/greenHaze</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/jade</item>
        <item name="colorSecondaryVariant">@color/greenHaze</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Text input edittext theme-->
    <style name="textInputEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="buttonStyle">
        <item name="background">@drawable/view_button</item>
    </style>
</resources>